<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Lego Collection</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>

  <body tabindex="-1">
    <%- include('partials/navbar', {page: '/lego/sets'}) %>

    <div class="container mx-auto">
      <div class="hero bg-base-200 rounded-lg p-6">
        <div class="hero-content text-center">
          <div class>
          <h1 class="text-5xl font-bold mb-8">Collection</h1>
          <div class="my-4">
            <a href="/lego/sets?theme=technic" class="btn btn-outline btn-info m-2">Technic</a>
            <a href="/lego/sets?theme=classic" class="btn btn-outline btn-info m-2">Classic Town</a>
            <a href="/lego/sets?theme=playhouse" class="btn btn-outline btn-info m-2">Playhouse</a>
            <a href="/lego/sets?theme=Lion Knights" class="btn btn-outline btn-info m-2">Lion Knights</a>
          </div>

          <table class="table-auto w-full">
            <thead>
              <tr>
                <th>Image</th>
                <th>Name</th>
                <th>Theme</th>
                <th>Year</th>
                <th>Number of Parts</th>
                <th>Details</th>
              </tr>
            </thead>
            <tbody>
              <% sets.forEach(set => { %>
              <tr>
                <td class="px-2">
                  <div class="avatar">
                    <div class="w-24 rounded">
                      <img src="<%= set.img_url %>" alt="<%= set.name %>" />
                    </div>
                  </div>
                </td>
                <td class="px-2"><%= set.name %></td>
                <td class="px-2">
                  <a
                    href="/lego/sets?theme=<%= set.theme %>"
                    class="btn btn-outline btn-info"
                    ><%= set.theme %></a
                  >
                </td>
                <td class="px-4"><%= set.year %></td>
                <td class="px-4"><%= set.num_parts %></td>
                <td class="px-2">
                  <a
                    href="/lego/sets/<%= set.set_num %>"
                    class="btn btn-outline btn-info"
                    >Details</a
                  >
                </td>
              </tr>
              <% }) %>
            </tbody>
          </table>
        </div>
      </div>
    </div>

    <br />
  </body>
</html>
