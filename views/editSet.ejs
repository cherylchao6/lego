<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Edit Set - Lego Collection</title>
    <link href="/css/output.css" rel="stylesheet" />
  </head>
  <body>
    <%- include('partials/navbar', {page: '' }) %>
    <div class="container mx-auto">
      <div class="hero bg-slate-200">
        <div class="hero-content text-center">
          <div class="max-w-md">
            <h1 class="text-5xl font-bold">Edit Set - <%= set.name %></h1>
          </div>
        </div>
      </div>

      <div class="mt-4 px-2 py-2">
        <form action="/lego/editSet" method="POST">
          <div class="mb-4">
            <label for="name" class="block text-gray-700">Name</label>
            <input
              type="text"
              id="name"
              name="name"
              required
              class="border rounded w-full py-2 px-3 text-gray-700"
              value="<%= set.name %>"
            />
          </div>
          <div class="mb-4">
            <label for="year" class="block text-gray-700">Year</label>
            <input
              type="number"
              id="year"
              name="year"
              required
              class="border rounded w-full py-2 px-3 text-gray-700"
              value="<%= set.year %>"
            />
          </div>
          <div class="mb-4">
            <label for="num_parts" class="block text-gray-700">Number of Parts</label>
            <input
              type="number"
              id="num_parts"
              name="num_parts"
              required
              class="border rounded w-full py-2 px-3 text-gray-700"
              value="<%= set.num_parts %>"
            />
          </div>
          <div class="mb-4">
            <label for="img_url" class="block text-gray-700">Image URL</label>
            <input
              type="url"
              id="img_url"
              name="img_url"
              required
              class="border rounded w-full py-2 px-3 text-gray-700"
              value="<%= set.img_url %>"
            />
          </div>
          <div class="mb-4">
            <label for="theme_id" class="block text-gray-700">Theme</label>
            <select
              id="theme_id"
              name="theme_id"
              required
              class="border rounded w-full py-2 px-3 text-gray-700"
            >
              <% themes.forEach(theme => { %>
              <option <%= (set.theme_id == theme.id) ? "selected" : "" %> value="<%= theme.id %>">
                <%= theme.name %>
              </option>
              <% }) %>
            </select>
          </div>
          <div class="mb-4">
            <label for="set_num" class="block text-gray-700">Set Number</label>
            <input
              type="text"
              id="set_num"
              name="set_num"
              required
              class="border rounded w-full py-2 px-3 text-gray-700 cursor-not-allowed"
              value="<%= set.set_num %>"
              readonly
            />
          </div>
          <div class="text-center">
            <button type="submit" class="btn btn-primary">Update Set</button>
          </div>

          <div class="text-center mt-4">
            <a href="/lego/deleteSet/<%= set.set_num %>" class="btn btn-error">Delete Set</a>
          </div>
        </form>
      </div>
    </div>
  </body>
</html>
